<p>Search Here : </p>
<br>
<%= form_for @search do |f| %>
	
	<div class="field">
	<%= f.label :keywords %>
	<%= f.text_field :keywords %>
	</div>	
	<br>
	<div class="field">
	<%= f.label :category %>
	<%= f.select :category, options_for_select(@categories), include_blank: true %>
	</div>
	<br>
	<div class="field">
	<%= f.label :min_price %>
	<%= f.text_field :min_price, size: 10 %>
	</div>
	<br>
	<div class="field">
	<%= f.label :max_price %>
	<%= f.text_field :max_price, size: 10 %>
	</div>
	<br>
	<div class="field">
	<%= f.label :isbn %>
	<%= f.text_field :isbn %>
	</div>
	<br>
	<div class="action">
	<%= f.submit 'Search' %>
	</div>


<% end %>

<%= link_to 'Back', books_path %>