<p id="notice"><%= notice %></p>
<!-- Button trigger modal -->

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  New Book
</button>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  class="data_class">

        <%= render @books %>
 
  </tbody>
</table>


    <%= form_for(@book, remote: true) do |form| %>
<!-- Modal -->
<div id ="new">
<div class="modal fade" data-backdrop="" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      

              <div class="modal-body">
                
              <% if @book.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

                  <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= form.label :name %>
                <%= form.text_field :name, id: :book_name, class: 'form-control erase' %>
              </div>

              <div class="field">
                <%= form.label :category %>
                <%= form.text_field :category, id: :book_category, class: 'form-control erase' %>
              </div>

              <div class="field">
                <%= form.label :price %>
                <%= form.text_field :price, id: :book_price, class: 'form-control erase' %>
              </div>

              <div class="field">
                <%= form.label :isbn %>
                <%= form.number_field :isbn, id: :book_isbn, class: 'form-control erase' %>
              </div>

            
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <%= submit_tag :Save, class: "btn btn-primary" %>
                </div>
  
    </div>
  </div>
</div>
</div>
    <% end %>

  



