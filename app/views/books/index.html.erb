<p id="notice"><%= notice %></p>

<h1>Books</h1>
<%= form_tag books_path, method: 'GET' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
<br>
<%= link_to 'Advance Search', new_search_path %>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  class="data_class">

        <%= render @books %>
 
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, id: 'new_link', remote: true %>
